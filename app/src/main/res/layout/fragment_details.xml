<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/interfacenonmpm"
    tools:context=".AspirationListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:id="@+id/layout1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:visibility="invisible"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/layout1"
        android:id="@+id/layout2"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/editProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtViewUsername"
            android:layout_toLeftOf="@id/btnLogout"
            android:text="Edit Profile"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtViewUsername"
            android:layout_alignParentEnd="true"
            android:text="Log Out"
            android:textSize="16dp"
            android:paddingLeft="15dp"
            android:textColor="@color/colorPrimary"
            android:onClick="logout"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:id="@+id/layout3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtViewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"
            android:textColor="#000000"
            android:text="Aspiration"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout3"
        android:id="@+id/layout4"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#000000"
            android:text="NAMA"

            />
        <TextView
            android:id="@+id/txtNIM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_toRightOf="@id/txtNama"
            android:textColor="#000000"
            android:text="NIM"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/txtKelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_toRightOf="@id/txtNIM"
            android:textColor="#000000"
            android:text="KELAS"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout4"
        android:id="@+id/layout5"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtJenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#000000"
            android:text="JENIS"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout5"
        android:id="@+id/layout6"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

    <TextView
        android:id="@+id/txtAspi"
        android:layout_below="@+id/layout4"
        android:layout_width="280dp"
        android:layout_height="250dp"
        android:background="@drawable/txtbox_2"
        android:divider="@android:color/transparent"
        android:dividerHeight="20.0sp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout6"
        android:id="@+id/layout7"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnBackFromDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/custom_button"
            android:textColor="#FFFFFF"
            android:text="Back" />

    </LinearLayout>
</RelativeLayout>