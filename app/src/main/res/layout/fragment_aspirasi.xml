<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/interfacempm"

    tools:context=".AspirationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="25dp"
        android:paddingRight="25dp"
        android:id="@+id/layout1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Log in"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/layout2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:text="Share Your Aspiration Here :"

            />

        <Spinner
            android:id="@+id/dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:spinnerMode="dropdown"
            android:layout_marginTop="7dp"
            style="@style/spinner_style"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            />


        <EditText
            android:id="@+id/aspi_input"
            android:background="@drawable/txtbox_2"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/dropdown"
            android:layout_marginTop="15dp"
            android:hint="Fill your Aspiration"
            android:maxLength="300"
            android:padding="7dp"
            android:gravity="top|left"
            />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtshare"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:background="@drawable/custom_button"
            android:textColor="#FFFFFF"
            android:text="Submit" />

    </LinearLayout>

</RelativeLayout>